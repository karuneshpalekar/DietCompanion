<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.recommendation.diet.AllDietFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_diet_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/all_diet_recycler_view"
        app:layout_goneMarginBottom="@dimen/ten_dp"
        android:layout_marginBottom="@dimen/five_dp"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/all_diet_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/deep_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/fireflix_white" />


</androidx.constraintlayout.widget.ConstraintLayout>
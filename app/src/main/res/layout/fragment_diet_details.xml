<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:backgroundTint="@color/background"
    tools:context=".presentation.recommendation.diet.DietDetailsFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/nutrition_detail_cardView"
        style="@style/CustomCardViewStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/five_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:layout_marginEnd="@dimen/five_dp"
        android:layout_marginBottom="@dimen/ten_dp"
        android:backgroundTint="@color/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_inside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/fifteen_dp" />

                <ImageButton
                    android:id="@+id/navigate_diet_detail_back"
                    android:layout_width="@dimen/fourty_five_dp"
                    android:layout_height="@dimen/fourty_five_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:background="@drawable/ic_back"
                    app:layout_constraintStart_toStartOf="@id/guideline_inside"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/diet_detail"
                    android:layout_width="@dimen/three_hundred_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/diet_details"
                    android:textAlignment="textStart"
                    android:textColor="@color/fireflix_orange"
                    android:textSize="@dimen/thirty_sp"
                    app:layout_constraintStart_toStartOf="@id/guideline_inside"
                    app:layout_constraintTop_toBottomOf="@id/navigate_diet_detail_back" />


                <TextView
                    android:id="@+id/diet_detail_name"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/fourty_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/name_of_the_diet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail" />


                <TextView
                    android:id="@+id/diet_detail_name_txt"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_medium"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/nothing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twenty_two_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_name" />

                <TextView
                    android:id="@+id/diet_detail_aim"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/aim_of_the_diet"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_name_txt" />


                <TextView
                    android:id="@+id/diet_detail_aim_txt"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/nothing"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_aim" />


                <TextView
                    android:id="@+id/diet_detail_claim"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/claim_of_the_diet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_aim_txt" />


                <TextView
                    android:id="@+id/diet_detail_claim_txt"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/nothing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_claim" />


                <TextView
                    android:id="@+id/diet_detail_description"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/twenty_five_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:fontFamily="@font/roboto_condensed_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/description_of_the_diet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_claim_txt" />


                <TextView
                    android:id="@+id/diet_detail_description_txt"
                    android:layout_width="@dimen/three_fifty_dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fifteen_dp"
                    android:layout_marginTop="@dimen/five_dp"
                    android:layout_marginEnd="@dimen/ten_dp"
                    android:layout_marginBottom="@dimen/twenty_dp"
                    android:fontFamily="@font/roboto_light"
                    android:paddingStart="@dimen/ten_dp"
                    android:paddingEnd="@dimen/ten_dp"
                    android:text="@string/nothing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/diet_detail_description" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/diet_detail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/two_dp"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/deep_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackColor="@color/fireflix_white" />


</androidx.constraintlayout.widget.ConstraintLayout>